<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/quiz_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bodyTextStyle"
            tools:text="Programming 1"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/quiz_points_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/freeBodyTextStyle"
            tools:text="20 pts"
            app:layout_constraintStart_toStartOf="@id/quiz_name_text"
            app:layout_constraintEnd_toEndOf="@id/quiz_name_text"
            app:layout_constraintTop_toBottomOf="@id/quiz_name_text"/>

        <Button
            android:id="@+id/take_quiz_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/take_quiz"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quiz_points_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>