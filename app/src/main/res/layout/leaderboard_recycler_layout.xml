<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/placement_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bodyTextStyle"
        tools:text="1. "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bodyTextStyle"
        tools:text="Evan Bain"
        app:layout_constraintStart_toEndOf="@id/placement_text"
        app:layout_constraintTop_toTopOf="@id/placement_text"
        app:layout_constraintBottom_toBottomOf="@id/placement_text"/>

    <TextView
        android:id="@+id/points_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bodyTextStyle"
        tools:text="20 pts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/placement_text"
        app:layout_constraintBottom_toBottomOf="@id/placement_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>